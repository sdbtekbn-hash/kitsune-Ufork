<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="io.github.huskydg.magisk.ui.modulerepo.ModuleRepoRvItem" />
    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/WidgetFoundation.Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/l_50"
        android:onClick="@{() -> item.openInfo()}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Cover Image -->
            <ImageView
                android:id="@+id/module_cover"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:background="?attr/colorSurfaceVariant"
                android:contentDescription="@string/module_cover"
                app:imageUrl="@{item.coverUrl}"
                goneUnless="@{item.hasCover}"
                tools:src="@drawable/ic_search" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/l1">

                <!-- Module Icon -->
                <ImageView
                    android:id="@+id/module_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="@dimen/l_50"
                    android:scaleType="centerCrop"
                    android:background="?attr/colorSurfaceVariant"
                    android:contentDescription="@string/module_icon"
                    app:imageUrl="@{item.iconUrl}"
                    goneUnless="@{item.hasIcon}"
                    tools:src="@drawable/ic_search" />

                <!-- Module Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/WidgetFoundation.Text.Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@{item.name}"
                            android:textStyle="bold"
                            tools:text="Module Name" />

                        <!-- Verified Badge -->
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="@dimen/l_50"
                            android:src="@drawable/ic_verified"
                            android:contentDescription="@string/verified_module"
                            goneUnless="@{item.isVerified}"
                            tools:src="@drawable/ic_search" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/WidgetFoundation.Text.Caption.Variant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@{@string/module_repo_version(item.version, item.author)}"
                        tools:text="v1.0 by Author" />

                    <!-- Categories -->
                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/WidgetFoundation.Text.Caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@{item.categoriesText}"
                        android:textColor="?attr/colorPrimary"
                        goneUnless="@{item.hasCategories}"
                        tools:text="System, Performance" />

                </LinearLayout>

            </LinearLayout>

            <!-- Description -->
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/WidgetFoundation.Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/l1"
                android:layout_marginEnd="@dimen/l1"
                android:layout_marginBottom="@dimen/l_50"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="@{item.description}"
                goneUnless="@{!item.description.empty}"
                tools:text="Module description goes here. This is a longer description to show how it wraps." />

            <!-- Footer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/l1"
                android:layout_marginEnd="@dimen/l1"
                android:layout_marginBottom="@dimen/l1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/WidgetFoundation.Text.Caption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{@string/module_repo_last_update(item.lastUpdate)}"
                    tools:text="Updated: 2025-01-01" />

                <!-- Size -->
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/WidgetFoundation.Text.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/l_50"
                    android:text="@{item.sizeFormatted}"
                    goneUnless="@{item.hasSize}"
                    tools:text="2.5 MB" />

                <com.google.android.material.button.MaterialButton
                    style="@style/WidgetFoundation.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/download"
                    android:onClick="@{() -> item.download()}" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>

